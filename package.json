{
  "name": "creative-toolkit",
  "description": "Automation toolkit for building original videos and music as fast as possible without compromising quality",
  "version": "0.34.1",
  "author": "dave caruso <dave@davecode.me>",
  "private": true,
  "scripts": {
    "dev": "node ./ctk.mjs run",
    "build": "node ./ctk.mjs build",
    "run": "node ./ctk.mjs run",
    "lint": "prettier --write . && eslint --fix .",
    "app_install": "Creative Toolkit Setup 0.34.1.exe"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "fs-extra": "^10.0.0",
    "immer": "^9.0.5",
    "luaparse": "^0.3.1",
    "path-browserify": "^1.0.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "uuid": "^8.3.2",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/luaparse": "^0.2.8",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "chokidar": "^3.5.2",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.3.2",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "sass": "^1.38.0",
    "typescript": "^4.3.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "vite": "^2.4.1",
    "vite-plugin-node": "^0.0.8"
  },
  "build": {
    "productName": "Creative Toolkit",
    "appId": "me.davecode.toolkit",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "icon": "assets/build/icon.png",
    "files": [
      "*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true
    },
    "directories": {
      "app": "build/app",
      "buildResources": "assets",
      "output": "build/release"
    }
  }
}
