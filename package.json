{
  "name": "creative-toolkit",
  "description": "Automation toolkit for building original videos and music as fast as possible without compromising quality",
  "version": "0.34.0",
  "author": "dave <dave@davecode.me>",
  "private": true,
  "scripts": {
    "dev": "vite",
    "serve": "vite preview"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "fs-extra": "^10.0.0",
    "immer": "^9.0.5",
    "luaparse": "^0.3.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "uuid": "^8.3.2",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.12",
    "@types/luaparse": "^0.2.8",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "prettier": "^2.3.2",
    "sass": "^1.38.0",
    "typescript": "^4.3.2",
    "typescript-eslint": "^0.0.1-alpha.0",
    "vite": "^2.4.1",
    "vite-plugin-node": "^0.0.8"
  },
  "build": {
    "productName": "Creative Toolkit",
    "appId": "me.davecode.toolkit",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "files": [
      "index.js",
      "index.html",
      "assets",
      "node_modules",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "menuCategory": "Creative Toolkit"
    },
    "directories": {
      "app": "build/app",
      "buildResources": "assets",
      "output": "build/release"
    }
  }
}
