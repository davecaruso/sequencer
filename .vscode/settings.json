    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.vscode": true,
    "**/tsconfig.json": true,
    "**/vite.config.ts": true,
    "**/yarn.lock": true
  },
  "[html]": {
